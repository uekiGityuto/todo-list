{
  "permissions": {
    "ask": [
      "Edit(**/.devcontainer/**)",
      "Edit(~/.claude/**)",
      "Edit(~/.codex/**)",
      "Edit(~/.gemini/**)",
      "Edit(~/.takt/**)",
      "Edit(~/.agents/**)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "branch=$(git branch --show-current 2>/dev/null); if [ \"$branch\" = \"main\" ]; then echo 'mainブランチでの編集は禁止です。featureブランチを作成してください。' >&2; exit 2; fi"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/block-main-git.sh"
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-commit-lint.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
